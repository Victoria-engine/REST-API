{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2016",
    "module": "commonjs",
    "lib": [
      "ES2017"
    ],
    "sourceMap": true,
    "rootDir": "./",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "./build/",
    "esModuleInterop": true,
    "strict": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "baseUrl": "./src/",
    "paths": {
      "*": [
        "src/*"
      ]
    },
  },
  "exclude": [
    "node_modules/**",
    "build",
    "coverage",
    "docs",
  ],
  "includes": [
    "src",
    "**/*.tsx",
    "**/*.ts",
    "**/*.js"
  ]
}